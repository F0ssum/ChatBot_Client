<Page x:Class="ChatBotClient.Views.ChatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converters="clr-namespace:ChatBotClient.Converters"
      mc:Ignorable="d"
      Background="{StaticResource BackgroundBrush}"
      UseLayoutRounding="True"
      SnapsToDevicePixels="True"
      TextOptions.TextFormattingMode="Display">

    <Page.Resources>
        <converters:MessageConverter x:Key="MessageConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Border Style="{StaticResource BaseBorderStyle}" Margin="20" Effect="{StaticResource DropShadowEffect}">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="Чат с ботом" Style="{StaticResource BaseTextStyle}" FontSize="18" FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <!-- История сообщений -->
                <Border Grid.Row="1" Style="{StaticResource BaseBorderStyle}" CornerRadius="10" Padding="10"
                        Effect="{StaticResource DropShadowEffect}">
                    <ListBox ItemsSource="{Binding Messages}" Style="{StaticResource ListBoxStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid MaxWidth="500" Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="{Binding Author, Converter={StaticResource MessageConverter}}"
                                            Style="{StaticResource MessageBubbleStyle}"
                                            HorizontalAlignment="{Binding Author, Converter={StaticResource MessageConverter}, ConverterParameter=Alignment}"
                                            Grid.Column="{Binding Author, Converter={StaticResource MessageConverter}, ConverterParameter=GridColumn}"
                                            Padding="10" CornerRadius="10">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap"
                                                       Style="{StaticResource BaseTextStyle}"/>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}"
                                                       Style="{StaticResource BaseTextStyle}" FontSize="10"
                                                       Foreground="{StaticResource DividerBrush}" HorizontalAlignment="Right"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <!-- Панель ввода -->
                <TextBox Grid.Row="2" Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBoxStyle}" Margin="0,20,0,0"
                         AcceptsReturn="False" AcceptsTab="False"
                         materialDesign:HintAssist.Hint="Введите сообщение...">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SendMessageCommand}"/>
                    </TextBox.InputBindings>
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Grid>
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Content="😊" Style="{StaticResource IconButtonStyle}"
                                                ToolTip="Добавить эмодзи" Command="{Binding AddEmojiCommand}"/>
                                        <Button Grid.Column="1" Content="📎" Style="{StaticResource IconButtonStyle}"
                                                ToolTip="Прикрепить файл" Command="{Binding AttachFileCommand}"/>
                                        <ScrollViewer Grid.Column="2" x:Name="PART_ContentHost" Margin="5,2"
                                                      VerticalAlignment="Center"/>
                                        <Button Grid.Column="3" Content="🎙" Style="{StaticResource IconButtonStyle}"
                                                ToolTip="Голосовой ввод" Command="{Binding VoiceInputCommand}"/>
                                        <Button Grid.Column="4" Content="➤" Style="{StaticResource IconButtonStyle}"
                                                ToolTip="Отправить" Command="{Binding SendMessageCommand}"/>
                                    </Grid>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </TextBox.Template>
                    <TextBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Добавить эмодзи" Command="{Binding AddEmojiCommand}"/>
                            <MenuItem Header="Прикрепить файл" Command="{Binding AttachFileCommand}"/>
                            <MenuItem Header="Посмотреть историю" Command="{Binding ShowChatHistoryCommand}"/>
                            <MenuItem Header="Начать новый диалог" Command="{Binding NewDialogCommand}"/>
                        </ContextMenu>
                    </TextBox.ContextMenu>
                </TextBox>

                <!-- Панель навигации -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="{materialDesign:PackIcon Kind=Book}"
                            Style="{StaticResource IconButtonStyle}" ToolTip="Перейти к дневнику"
                            Command="{Binding GoToDiaryCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Модальное окно для подтверждения нового диалога -->
        <Border x:Name="NewDialogModal" Background="{StaticResource ModalOverlayBrush}"
                Visibility="{Binding NewDialogModalVisibility, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Style="{StaticResource BaseBorderStyle}" CornerRadius="10" Padding="20"
                    Width="300" Height="150" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Effect="{StaticResource DropShadowEffect}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Начать новый диалог? Текущая история будет очищена."
                               Style="{StaticResource BaseTextStyle}" TextWrapping="Wrap" FontSize="14"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Отмена" Style="{StaticResource ModernButtonStyle}" Margin="0,0,10,0"
                                Command="{Binding CancelNewDialogCommand}"/>
                        <Button Content="Подтвердить" Style="{StaticResource ModernButtonStyle}"
                                Command="{Binding ConfirmNewDialogCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Модальное окно для истории чатов -->
        <Border x:Name="ChatHistoryModal" Background="{StaticResource ModalOverlayBrush}"
                Visibility="{Binding ChatHistoryModalVisibility, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Style="{StaticResource BaseBorderStyle}" CornerRadius="10" Padding="20"
                    Width="400" Height="300" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Effect="{StaticResource DropShadowEffect}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="История чатов" Style="{StaticResource BaseTextStyle}" FontSize="16" FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    <ListBox Grid.Row="1" ItemsSource="{Binding ChatHistory}" Style="{StaticResource ListBoxStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Style="{StaticResource BaseTextStyle}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Button Grid.Row="2" Content="Закрыть" Style="{StaticResource ModernButtonStyle}"
                            HorizontalAlignment="Right" Margin="0,10,0,0" Command="{Binding CloseChatHistoryCommand}"/>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>