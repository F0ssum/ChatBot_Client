<Window x:Class="ChatBotClient.Views.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="5" 
                     Tag="Username" ToolTip="Username"/>
            <PasswordBox x:Name="PasswordBox" Margin="5" 
                         Tag="Password" ToolTip="Password"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="5" 
                     Tag="Email (optional)" ToolTip="Email (optional)"/>
            <Button Command="{Binding LoginCommand}" Content="Login" Margin="5"/>
            <Button Command="{Binding RegisterCommand}" Content="Register" Margin="5"/>
            <TextBlock Text="{Binding Status}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>